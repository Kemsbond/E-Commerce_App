@using E_Ticaret.Entity
@model IEnumerable<Comments>


@{
    var id = Url.RequestContext.RouteData.Values["id"];
}

<div class="tab-pane fade" id="pills-comments" role="tabpanel" aria-labelledby="pills-profile-tab">
    <div class="container">
        <div class="row">
            <div class="panel panel-default widget">
                <div class="panel-heading">
                    <span class="glyphicon glyphicon-comment"></span>
                    <h6 class="panel-title" style="margin-left:10px">
                        Yorumlar    <span class="label label-info mb-5">(@Model.Count())</span>
                    </h6>

                </div>
                <div class="panel-body" style="width:1110px">

                    <ul class="list-group">

                        @foreach (var item in Model)
                        {
                            if (int.Parse(id.ToString()) == item.ProductId)
                            {


                                <li class="list-group-item" style="background-color:#eee;border-radius: 16px;margin-bottom: 25px;width:1100px;font-size: 13px;">
                                    <div class="row">

                                        <div class="col-xs-10 col-md-11">
                                            <div>
                                                <strong style="display: block;margin-bottom: 8px;">@item.Head</strong>

                                            </div>
                                            <div class="comment-text" style="margin-bottom:10px;color:#484848;font-size:14px;line-height: 1.4;word-wrap: break-word;font-family: -apple-">
                                                @item.Description
                                            </div>
                                            <div class="mic-info">
                                                <strong style="font-weight:600;margin-top:15px">| @item.UserName -&nbsp;@DateTime.Now | </strong>
                                                @if (item.UserName == User.Identity.Name)
                                                {
                                                    <a  href="/Home/DeleteComment/@item.Id" class="btn btn-danger btn-sm btn-rounded" style="color:white;float:right">YORUMU SİL</a>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                </li>
                            }
                            else
                            {
                                <p>yorum yok</p>
                            }
                        }

                        @Html.Action("AddComment", "Home")

                    </ul>


                </div>

            </div>
        </div>
    </div>
</div>

